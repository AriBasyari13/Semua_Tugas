<%= render 'navigation'%>

<h2>ARTICLE</h2> 
<h3><%= @article.title %></h3>
<p><%= @article.content %></p>
<br />
<h4>COMMENT</h4>
<% for comment in @article.comments %>
    <p>User ID		: <%= comment.user_is %></p> 
    <p>Comment		: <%= comment.content %></p> 
    <p>Status		: <%= comment.status %></p>
<% end %>
<br />
<h3>Download : </h3> 
<h3><%= link_to "Excel", article_path(format: "xlsx")%></h3>
<br />
<h4>COMMENT</h4>
<%= form_for ([@article, @article.comments.build]) do |f| %>
  <%= f.hidden_field :article_id %>
  <p>
    <%= f.label :user_is %><br />
    <%= f.text_field :user_is %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </p>
  <p>
  	<%= f.label :status %>
	<%= f.radio_button :status, "active", :checked => true %>
	<%= label :comment_status, 'active' %>
	<%= f.radio_button :status, "off", :checked => true %>
	<%= label :comment_status, 'off' %>
  </p>
  <p><%= f.submit %></p>
<% end %>

<p><%= link_to 'back to index', articles_path %></p>